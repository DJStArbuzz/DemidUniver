#include <iostream>
#include <string>
#include <algorithm>
#include <cmath>
#include <vector>

using namespace std;

int main() {
	int num;
	cin >> num;

	for (int test = 0; test < num; test++) {
		int n;
		cin >> n;
		
		int res = 0;
		int tmp = 0;
		for (int i = 0; i < n; i++) {
			cin >> tmp;
			res += abs(tmp);
		}

		cout << res << endl;
	}
}

#include <iostream>
#include <vector>
#include <map>
#include <random>
#include <algorithm>
#include <string>

using namespace std;

int main()
{
	int t;
	cin >> t;

	for (int test = 0; test < t; test++) {
		int n;
		cin >> n;

        for (int i = 0; i < n; i++)
        {
            for (int jj = 0; jj < 2; jj++)
            {
                for (int j = 0; j <  n; j++)
                {
                    for (int ii = 0; ii < 2; ii++)
                    {
                        ((i + j) % 2) ? (cout << '.') : (cout << '#');
                    }
                }
                cout << '\n';
            }
        }

	}

	return 0;

}

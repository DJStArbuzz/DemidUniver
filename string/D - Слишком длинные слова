#include<iostream>
#include<string>

using namespace std;

int main()
{
	int n;
	string res;
	cin >> n;
	for (int i = 0; i < n; i++) {
		cin >> res;
		if (res.size() <= 10) {
			cout << res << endl;
		}
		else {
			char first = res[0], last = res[res.size() - 1];
			cout << first << to_string(res.size() - 2) << last << endl;

		}
	}
}

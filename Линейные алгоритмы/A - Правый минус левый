#include <iostream>
#include <cmath>
#include <vector>
#include <string>
#include <algorithm>

using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> list(n);
    for (int i = 0; i < n; i++) {
        cin >> list[i];
    }

    int resI = 0;
    int resJ = 1;
    int resRaz = list[resJ] - list[resI];

    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            int tmpRaz = list[j] - list[i];

            if (tmpRaz > resRaz) {
                resRaz = tmpRaz;
                resI = i;
                resJ = j;
            }
            else if (tmpRaz == resRaz) {
                if (j < resJ || (i < resI && j == resJ)) {
                    resI = i;
                    resJ = j;
                }
            }
        }
    }

    cout << resI + 1 << " " << resJ + 1;
    return 0;
}

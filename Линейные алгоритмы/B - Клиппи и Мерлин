Не факт, что правильно. 
#include <iostream>
#include <cmath>
#include <vector>
#include <string>
#include <algorithm>

using namespace std;

int main()
{
	int n, k;
	cin >> n >> k;

	vector <int> list(n);
	for (int i = 0; i < n; i++)
	{
		cin >> list[i];
	}

	int maxiii = -1;
	int tmp = 0;

	int resJ = k + 1;
	int resI = 0;

	for (int i = k + 1; i < n; i++) {
		if (list[i - k - 1] > list[tmp])
		{
			tmp = i - k - 1;
		}
		if (list[i] + list[tmp] > maxiii) {
			maxiii = list[i] + list[tmp];
			resI = tmp;
			resJ = i;
		}
	}

	cout << resI + 1 << " " << resJ + 1;
	return 0;
}
